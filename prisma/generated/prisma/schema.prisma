generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  polls     Poll[]
  createdAt DateTime @default(now())
}

model Poll {
  id        String    @id @default(cuid())
  question  String
  options   Option[]
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
  expiresAt DateTime?
}

model Option {
  id     String @id @default(cuid())
  text   String
  poll   Poll   @relation(fields: [pollId], references: [id])
  pollId String
  votes  Int    @default(0)
}
